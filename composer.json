{
  "name": "diyrolepermission/diyrolepermission",
  "description": "Shared enums, roles, permissions, and middleware for Laravel microservices",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "DIYRolePermission\\Shared\\": "src/"
    }
  },
  "require": {
    "php": "^8.1",
    "illuminate/support": "^10.0",
    "illuminate/http": "^10.0",
    "illuminate/auth": "^10.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "extra": {
      "laravel": {
          "providers": [
              "DIYRolePermission\\Shared\\RolePermissionServiceProvider"
          ]
      }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
